<?xml version='1.0' encoding='utf-8'?>
<widget id="com.job.sho" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Job4Sho</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="wshilumani@gmail.com" href="jalapenodigital.co.za">
        Job4Sho Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-inappbrowser" spec="~1.5.0" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-geolocation" spec="~2.4.0" />
    <plugin name="cordova-plugin-vibration" spec="~2.1.2" />
    <plugin name="phonegap-plugin-push" spec="~1.8.3" />
    <plugin name="cordova-plugin-camera" spec="~2.3.0" />
    <plugin name="cordova-plugin-file-transfer" spec="~1.6.0" />
    <plugin name="cordova-plugin-statusbar" spec="~2.2.0" />
    <plugin name="cordova-plugin-globalization" spec="~1.0.4" />
    <plugin name="cordova-plugin-googleplus" spec="~5.1.1">
        <variable name="REVERSED_CLIENT_ID" value="com.googleusercontent.apps.861935090190-u6po0rl5q2b19f96tij2r5e460qujlaa" />
    </plugin>
    <plugin name="cordova-plugin-facebook4" spec="~1.7.4">
        <variable name="APP_ID" value="914947415308783" />
        <variable name="APP_NAME" value="Job4Sho" />
    </plugin>
    <plugin name="phonegap-facebook-plugin" spec="C:\Users\wshil\Desktop\Job4Sho\phonegap-facebook-plugin">
        <variable name="APP_ID" value="914947415308783" />
        <variable name="APP_NAME" value="Job4Sho" />
    </plugin>
</widget>
